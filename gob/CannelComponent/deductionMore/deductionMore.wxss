.deductionMore{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:700rpx;
  box-sizing: border-box;
  box-shadow:0rpx 0rpx 9rpx 1rpx rgba(0, 0, 0, 0.08);
  background: #fff;
  margin-bottom: 20rpx;
}
.deductionMore .top{
  /* height: 84rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.deductionMore .tips{
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-left: 22rpx;
}

.deductionMore .more{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(140,140,140,1);
  margin-right: 5rpx;
}
.deductionMore .more image{
  width: 11rpx;
  height: 20rpx;
}
.deductionMore .btnWrapper{
  width: 100%;
  display: flex;
}
.deductionMore .btnWrapper .btn{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.deductionMore .btnWrapper .btn{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.deductionMore .btnWrapper .btn .t{
  font-size: 34rpx;
}
.deductionMore .btnWrapper .all{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.deductionMore .active{
  background:linear-gradient(90deg,rgba(237,69,60,1) 0%,rgba(229,41,32,1) 100%);
  color: #fff !important;
}
.deductionMore .list{
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}
.deductionMore .list .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.deductionMore .ProductImg{
  width: 200rpx;
  height: 200rpx;
}
.deductionMore .detail{
  width: 415rpx;
}
.deductionMore .detail .title{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 33rpx;
}
.deductionMore .priceWrapper{
  display: flex;
  justify-content: flex-start;
}
.deductionMore .priceWrapper{
  display: flex;
  justify-items: flex-start;
  align-items: center;
}
.deductionMore .priceWrapper .price{
  font-size: 28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(229,41,32,1);
  margin-right: 36rpx;
}
.deductionMore .priceWrapper .dq{
  background:linear-gradient(90deg,rgba(229,41,32,0.15) 0%,rgba(237,69,60,0.15) 100%);
  border-radius:15rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(229,42,32,1);
}
.deductionMore .barWrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.deductionMore .barWrapper ._tips{
  font-size:18rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  margin-bottom: 6rpx;
}

.deductionMore .barBox{
  width:225rpx;
  background:rgba(51,51,51,0.1);
  border-radius: 9rpx;
}
.deductionMore .bar{
  height:18rpx;
  background:linear-gradient(90deg,rgba(229,41,32,1) 0%,rgba(237,69,60,1) 100%);
  border-radius:9rpx;
}

.deductionMore .left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content:flex-start;
}

.deductionMore ._btn{
  width:110rpx;
  height:50rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(229,42,33,1);
  border-radius:25rpx;
  line-height: 50rpx;
  text-align: center;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(229,42,32,1);
}

.deductionMore .line{
  height:1rpx;
  background:rgba(246,246,246,1);
  margin-bottom: 20rpx;
}