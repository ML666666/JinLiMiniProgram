.wrapper{
  width: 700rpx;
  margin-bottom: 20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 8rpx 1rpx rgba(0, 0, 0, 0.08);
  border-radius:8rpx;
  overflow: hidden;
}
.wrapper .banner{
  position: relative;
  background: #eee;
  height: 210rpx;
}
.wrapper .banner .tag{
  width:173rpx;
  height:41rpx;
  background:linear-gradient(86deg,rgba(255,0,0,1) 0%,rgba(255,0,48,1) 100%);
  border-radius:8rpx 0rpx 8rpx 0rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  line-height: 41rpx;
  text-align: center;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.wrapper .banner .tag_2{
  background:rgba(255, 255, 255, 0.9);
  border-radius:0px 0px 8rpx 8rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  text-align: center;
  align-items: center;
  position: absolute;
  top: 0rpx;
  right: 37rpx;
  padding: 7rpx
}
.wrapper .banner .bannerImage{
  width: 100%;
  height: 210rpx;
}
.wrapper .banner .timeWrapper{
  position: absolute;
  top: 160rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
}
.wrapper .banner .timeWrapper .radius{
  width:33rpx;
  height:33rpx;
  background:rgba(255,255,255,0.8);
  border-radius:50%;
  font-size:20rpx;
  font-family:PingFang SC;  
  font-weight:500;
  color:rgba(0,0,0,1);
  text-align: center;
  line-height: 33rpx;
}
.wrapper .banner .timeWrapper .c{
  font-size:25rpx;
  font-family:Adobe Heiti Std;
  font-weight:normal;
  color:rgba(255,255,255,1);
  margin: 0 9rpx;
  height: 33rpx;
  line-height: 33rpx;
}
.wrapper .banner .timeWrapper .red{
  background:linear-gradient(172deg,rgba(229,41,32,0.8),rgba(237,69,60,0.8));
  color: #fff;
}
.wrapper .goodWrapper{
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0rpx;
  box-sizing: border-box;
}
.wrapper .goodWrapper .item{
  width: 204rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.wrapper .goodWrapper .item .tag{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 0rpx;
  top: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transform: translateY(-10%);
}
.wrapper .goodWrapper .item .tag text{
  text-align: center;
  width: 100%;
  line-height: -15rpx;
  font-size:13rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.wrapper .goodWrapper .item .tagBg{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 0rpx;
  top: 0rpx;
}
.wrapper .goodWrapper .item image{
  width: 204rpx;
  height: 204rpx;
}
.wrapper .goodWrapper .price{
  display: flex;
  justify-content: space-between;
  margin-top: 18rpx;
  align-items: center;
  width: 204rpx;
}

.wrapper .goodWrapper view{
  flex: 1;
}
.wrapper .goodWrapper .left{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:800;
  color:rgba(229,43,34,1);
}
.wrapper .goodWrapper .right{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  text-decoration:line-through;
  color:rgba(214,214,214,1);
  text-align: right;
}