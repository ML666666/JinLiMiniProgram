.header{
  width: 100%;
  height: 531rpx;
  background:rgba(229,41,32,1);
  border-radius:0px 0px 40px 40px;
} 
.tBG{
  background:rgba(229,41,32,1);
}
.wBg{
  background: #f5f5f5;
}
.header .wrapper{
  position:fixed;
  left:0rpx;
  right:0rpx;
  z-index:100;
  transition: background 0.2s;
  transition-timing-function: linear;
}
.header .title{
  width: 100%;
}
.header .top{
  width: 100%;
  height:95rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.header .top .search{
  width:607rpx;
  height:62rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  display: flex;
  align-items: center;
  padding-left: 22rpx;
  box-sizing: border-box;
}

.header swiper{
  width: 400rpx;
  height: 62rpx;
}
.header swiper view{
  line-height: 62rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(202,202,202,1);
  margin-left: 20rpx;
}
.header .top .search image{
  width: 30rpx;
  height: 30rpx;
}
.header .top .msg{
  width: 36rpx;
  height:62rpx;
}
.header .top .contact{
  width: 36rpx;
  height:62rpx;
  margin: 0rpx;
  background: transparent;
  border: none;
  padding: 0rpx;
}
.header .top button::after{
  border: none;
}
.header .top .btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  line-height: 1;
  position: relative;
}
.header .top  .dot {
  font-size: 18rpx;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  left: 55%;
  top: -20%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background:#fff;
  color:red;
}
.header .top .red{
  background:red;
  color:#fff;
}
.header .top .activeDot{
  color: #fff;
  background: red;
}
.header .top .btn image{
  width: 35rpx;
  height: 35rpx;
  margin-bottom: 6rpx;
}
.header .top .text{
  font-size:16rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:#fff;
}
.header .top .b{
  color: #000;
}

