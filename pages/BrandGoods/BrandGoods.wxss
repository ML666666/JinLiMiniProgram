.brand-tabbar{
  left: 0;
  width: 100%;
  display: -ms-flexbox;
  display: flex;
  font-size: 30rpx;
  background: #fff;
  z-index: 300;
}
.brand-tabbar .item{
  flex: 1;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  font-size: 30rpx;
}
.brand-tabbar .item image{
  width: 16rpx;
  height: 26rpx;
  margin-left: 6rpx;
}
.brand-tabbar .active{
  color: red;
}
.goodList{
  display: flex;
  flex-wrap: wrap;
  padding: 22rpx 16rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.goodList .good{
  width: 352rpx;
  border-radius: 6rpx;
  background: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.goodList .good .imageWrapper{
  width: 352rpx;
  height: 352rpx;
  overflow: hidden;
}
.goodList .good .imageWrapper image{
  width: 100%;
}
.goodList .good .title{
  width: 100%;
  height: 78rpx;
  margin-bottom: 8rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: normal;
  word-wrap: normal;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  color: rgb(44, 62, 80);
}
.goodList .good .detail{
  padding:10rpx 20rpx 20rpx;
  box-sizing: border-box;
}
.goodList .good  .sales-price{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodList .good  .sales-price .price{
  color: #ff0101;
  font-weight: 700;
}
.goodList .good  .sales-price .sales{
  font-size: 24rpx;
  color: #888;
  text-decoration:line-through;
}
.DeadLineWrapper{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}