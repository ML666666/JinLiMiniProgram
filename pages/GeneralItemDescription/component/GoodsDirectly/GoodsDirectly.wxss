/* pages/GeneralItemDescription/component/GoodsDirectly/GoodsDirectly.wxss */
.GoodsDirecty{height: 160rpx;padding: 30rpx;background: #fff;box-sizing: border-box;margin-bottom: 20rpx;display: flex;align-items: center;}
.GoodsDirecty .Directly{width: 100%;height: 100%;display: flex;justify-content: space-between;align-items: center;position: relative;}
.GoodsDirecty ._wrapper{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.GoodsDirecty .Directly image{width: 100rpx;height: 100rpx;margin-right: 20rpx;}
.GoodsDirecty .Directly .w{display: flex;flex-direction: column;justify-content: space-around;height: 100%;}
.GoodsDirecty .Directly .w .e{    
    font-size: 30rpx;
    font-weight: 700;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #2c3e50;
}
.GoodsDirecty .Directly .w .r{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.GoodsDirecty .Directly .p{display: flex;justify-content: flex-end;align-items: center;position: absolute;top: 50%;right: 0px;transform: translateY(-50%);}
.GoodsDirecty .Directly .btn{
  width:174rpx;
  height:58rpx;
  background:linear-gradient(90deg,rgba(229,41,32,1) 0%,rgba(237,69,60,1) 100%);
  border-radius:29rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 58rpx;
}
.GoodsDirecty .Directly .p image{width: 30rpx;height: 32rpx;}