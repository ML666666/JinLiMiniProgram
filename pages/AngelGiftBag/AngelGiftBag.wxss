.AngelGift .itemFullWrapper{
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 2rpx 2rpx 20rpx #ccc;
  margin-top: 20rpx;
}
.AngelGift .itemFullWrapper .list-title{
  padding: 53rpx 0;
  text-align: center;
}
.AngelGift .itemFullWrapper .list-title image{
  width: 456rpx;
  margin-bottom:12rpx;
  height: 59.6rpx;
}
.AngelGift .itemFullWrapper .list-title .t{
    letter-spacing: 2px;
    font-size: 26rpx;
}
.AngelGift .container .item_container{flex-direction: column;display: flex;align-items: center;    padding: 0 32rpx;box-sizing: border-box}
.AngelGift .container .item_container .item{display: flex;margin-bottom: 24rpx;flex-direction: column;align-items: flex-start;width: 100%;background: #f5f5f6;border-radius: 12rpx; overflow: hidden;margin-bottom: 24rpx;}
.AngelGift .container .item_container .item image{border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;width: 100%;height: 300rpx;}
.AngelGift .container .item_container .item .detail{display:flex; background: #F5F5F6;
/* justify-content: center; */
box-sizing: border-box;
width: 100%;
border-bottom-left-radius: 20rpx;
border-bottom-right-radius: 20rpx; 
align-items: center;
justify-content: space-between;
padding: 24rpx;}
.AngelGift .container .item_container .item .titleDetail{
  font-size: 26rpx;
}
.AngelGift .container .item_container .item .titleDetail .title{
  width: 400rpx;
  margin-bottom: 10rpx;
  color: #171a23;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.AngelGift .container .item_container .item .titleDetail .price{
  color: #f20213;
}
.AngelGift .container .item_container .btn{
    width: 166rpx;
    height: 54rpx;
    line-height: 54rpx;
    border-radius: 54rpx;
    background: linear-gradient(180deg,#c7a579,#9f825e);
    color: #fff;
    text-align: center;
    font-size: 26rpx;
}
.isOver{
  font-size: 24rpx;
  text-align: center;
  padding: 25rpx 0;
  color: #777;
}