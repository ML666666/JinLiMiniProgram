/* pages/me/me.wxss */
.aboutMe{background: #f5f5f5;}
.aboutMe .list_Wrapper{margin: 0 auto;margin-top: 15rpx;background: #fff;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 2rpx #ddd;}
.aboutMe .list_Wrapper{width: 707rpx;display: flex;justify-content: center;align-items: center;flex-direction: column;}
.aboutMe .list_Wrapper .item_Wrapper{
  width: 707rpx;display: flex;justify-content: center;
}
.aboutMe .list_Wrapper .list_item{flex: 1; display: flex;flex-direction: column;justify-content: center;align-items: center;padding: 12rpx 0rpx;position: relative;}
.aboutMe .list_Wrapper .list_item .dot{    
  position: absolute;
  left: 55%;
  top: 25rpx;
  background-color: #ef4f4f;
  color: #fff;
  font-size: 22rpx;
  border-radius: 1000rpx;
  padding: 2px 6px;
  box-sizing: border-box;
}
.swiperWrapper{
  margin: 10rpx;
  padding: 20rpx;
  background: #f3f3f3;
  border-radius: 10rpx;
  box-sizing: border-box;
  width: 687rpx;
  height: 164rpx;
}
.swiperWrapper .title{
  font-size: 26rpx;
  color: #888;
  margin-bottom: 10rpx;
}
.swiperWrapper swiper{
  width: 100%;
  height: 80rpx;
}
.swiperWrapper swiper swiper-item{
  display: flex;
  align-items: center;
}
.swiperWrapper swiper swiper-item .gou{
  display: flex;
  align-items: center;
  color: #3f8ff3;
  font-size: 24rpx
}
.swiperWrapper swiper swiper-item .tips{
  color: #888;
  font-size: 24rpx;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.swiperWrapper swiper swiper-item .gou image{
  width: 23rpx;
  height: 23rpx;
  margin-right: 5rpx;
}
.swiperWrapper swiper .header{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.aboutMe .list_Wrapper .list_item text{font-size:24rpx;font-family:PingFang-SC-Medium;font-weight:500;color:rgba(136,136,136,1);}
.aboutMe .list_Wrapper .list_item image{width: 40rpx;height: 40rpx;margin-bottom: 10rpx;}
.aboutMe .ad{margin: 0 auto;width: 707rpx;height: 150rpx;margin-top: 23rpx;display: block;margin-bottom: 23rpx;}
.aboutMe .able_list{margin: 0 auto;width: 707rpx; border-radius:10rpx;box-shadow: 2rpx 2rpx 2rpx #ddd;color: #888;background: #fff;}
.aboutMe .able_list .title{font-size:30rpx;font-family:PingFang-SC-Bold;font-weight:bold;color:rgba(51,51,51,1);width: 100%;
padding: 34rpx;box-sizing: border-box; border-bottom:2rpx solid #f5f5f5;}
.aboutMe .able_list .Wrapper{padding: 20rpx;width: 100%;box-sizing: border-box;display: flex;flex-wrap: wrap;justify-content: flex-start;}
.aboutMe .able_list .Wrapper .item{margin-bottom: 30rpx;margin-top: 30rpx; width: 25%;float: left; display: flex;flex-direction: column;justify-content: center;align-items: center;}
.aboutMe .able_list .Wrapper .item image{width: 42rpx;height: 42rpx;margin-bottom: 18rpx;}
.aboutMe .able_list .Wrapper .item text{font-size:25rpx;font-family:PingFang-SC-Medium;font-weight:500;color:rgba(102,102,102,1);}

button{
 position: relative;
 display: block;
 margin-left: auto;
 margin-right: auto;
 padding-left: 0rpx;
 padding-right: 0rpx;
 box-sizing: border-box;
 text-align: center;
 text-decoration: none;
 line-height: 1;
 border-radius:0rpx;
 -webkit-tap-highlight-color: transparent;
 overflow: hidden;
 color: #000000;
 background-color: transparent;
}
button::after{
  border:none;
}