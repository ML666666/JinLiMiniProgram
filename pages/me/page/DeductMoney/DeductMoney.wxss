/* pages/me/page/DeductMoney/DeductMoney.wxss */
.wrapper{
  width: 100%;
  /* height: 234rpx; */
  background: #fff;
  text-align: center;
  padding-top: 52rpx;
  margin-bottom: 20rpx;
}
.wrapper .c{
  font-size: 28rpx;
  margin-bottom: 40rpx;
}
.wrapper .p{
  font-size: 42rpx;
  color: red;
  font-weight: 700;
  margin-bottom: 40rpx;
}

.item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 50rpx 16rpx 28rpx;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  position: relative;
}
.imageWrapper{
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  position: relative;
}
.imageWrapper .tips{
  font-size: 14rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 10rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  background: red;
  border-bottom-right-radius: 6rpx;
  color: #fff;
  box-sizing: border-box;
}

.item image{
  width: 100%;
  height: 100%;
}
.item .c{
  width: 360rpx;
  height: 120rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.item .c .title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 700;
  color: rgb(44, 62, 80);
  margin-bottom: 10rpx;
}
.item .c .time{
  color: #999;
  font-size: 24rpx;
}
.item .num{
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 50rpx;
}