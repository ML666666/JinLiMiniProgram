.bannerImagg{
  width: 100%;
  height: 289rpx;
}
.list{width: 100%;display: flex;border-bottom: 1rpx solid rgb(88, 88, 88,0.5)}
.list .itemWrapper{flex: 1;height: 84rpx;display: flex;align-items: center;justify-content: center;color: rgb(88, 88, 88);
line-height: 85rpx;font-size: 26rpx;position: relative;}
.list .bar{
  position: absolute;
  width: 70%;
  height: 2rpx;
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%);
}
.list .active text{
  color: rgb(255, 94, 83);
}
.list .active .bar{
  background: rgb(255, 94, 83);
}
.listWrapper .item{
  display: flex;
  padding: 40rpx;
  background: #fff;
  box-sizing: border-box;
}
.listWrapper .item image{
  width: 200rpx;
  height: 120rpx;
  margin-right: 40rpx;
}
.listWrapper .item text{
  font-size: 30rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: normal;
  word-wrap: normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}