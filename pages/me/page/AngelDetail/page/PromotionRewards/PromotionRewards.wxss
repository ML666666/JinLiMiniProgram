.rewards-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #f3f3f3;
}
.rewards-info .questionWrapper{
  display: flex;
  padding: 10rpx;
  justify-content: flex-end;
  width: 100%;
  box-sizing: border-box;
  padding-right: 20rpx;
}
.rewards-info .questionWrapper image{
  width: 30rpx;
  height: 30rpx;
}
.rewards-info .rewards-text{
  margin: 20rpx 0 32rpx;
  font-size: 28rpx;
}
.rewards-info .rewards-total-num{
  color: red;
  font-size: 44rpx;
  font-weight: bolder;
}

.rewards-info  .rewards-btn{
  width: 350rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  text-align: center;
  padding: 24rpx 0;
  background: red;
  color: #fff;
  border-radius: 60rpx;
  margin:64rpx 0;
}

.tabbar{
  display: flex;
  background: #fff;
}

.tabbar .item{
  flex: 1;
  text-align: center;
  margin: 20rpx 0;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 28rpx;
}

.tabbar .item:first-child{
  border-right: 2rpx dashed #ccc;
}
.tabbar .active{
  color: red;
}
.listWrapper .item{
  display: flex;
  padding: 20rpx 40rpx 20rpx 40rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}
.listWrapper .item .left{
  display: flex;
  align-items: center;
}
.listWrapper .item .left .c{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 25rpx;
}
.listWrapper .item .left  .c .a{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-bottom: 18rpx;
}
.listWrapper .item .left  .c  .b{
  font-size:23rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.listWrapper .item .right{

}
.listWrapper .header{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.listWrapper .item .right .a{
  font-size:30rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(0,0,0,1);
  margin-bottom: 14rpx;
  text-align: right;
}
.listWrapper .item .right .b{
  font-size:20rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,51,51,1); 
}