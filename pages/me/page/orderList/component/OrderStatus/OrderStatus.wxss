.OrderStatus{
  display: flex;
  justify-content: flex-end;
}
.OrderStatus .btn{
    height: 56rpx;
    width: 174rpx;
    border: none;
    border-radius: 40rpx;
    outline: none;
    font-size: 24rpx;
    line-height: 56rpx;
    text-align: center;
}
.OrderStatus .grayBtn{
    background: #fff;
    border: 1px solid #888;
    color: #888;
}
.OrderStatus .zf{
    margin-left: 8rpx;
    color: #fff;
    background: -webkit-gradient(linear, left top, right top, from(#F02B22), to(#FC2D59));
    background: linear-gradient(to right, #F02B22, #FC2D59);
}

.wrapper{
  width: 536rpx;
  box-sizing: border-box;
  background: #fff;
}
.wrapper .item{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: left;
}
._wrapper .ExpressListWrapper{
  height: 610rpx;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
