.item_W{width: 100%;height: 100rpx;display: flex;align-items: center;line-height: 100rpx; padding: 0rpx 20rpx;justify-content: space-between;box-sizing: border-box;color: #555;font-size: 28rpx;border-bottom: 2rpx solid #ececec;position: relative;}
.item_W .van-icon{position: absolute;right: 20rpx;top: 50%;transform: translateY(-50%)}

.btn{
  width: 400rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 26rpx;
  border: none;
  border-radius: 60rpx;
  display: block;
  text-align: center;
  background: linear-gradient(-90deg,#ea3f32,#ed7947);
  padding: 20rpx;
}
.jl{
