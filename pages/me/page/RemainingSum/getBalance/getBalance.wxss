.WithdrawDeposit .wd_back{
  padding: 40rpx;
  box-sizing: border-box;
}
.WithdrawDeposit .wd_back .title{
  font-size:24rpx;
}
.WithdrawDeposit .wd_back .p{display: flex;align-items: center;box-sizing: border-box;padding-left: 20rpx;border-bottom: 2rpx solid #ececec;}
.WithdrawDeposit .wd_back .p .c{font-size: 80rpx;color: #555;}
.WithdrawDeposit .wd_back .p input{height: 100%;width: 100%;}
.WithdrawDeposit .wd_back .E{display: flex;align-items: center;height: 100rpx;justify-content: space-between;padding: 0rpx 20rpx;}
