.banlanceCenter{
  display: flex;
  background: #fff;
  padding: 60rpx 0 78rpx;
  justify-content: space-between;
  box-sizing: border-box;
}
.banlanceCenter .item{
  flex: 1;
  height: 262rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.banlanceCenter .item .t{
  width: 100%;
  font-size: 28rpx;
  color: #2c3e50;
  text-align: center;
}
.banlanceCenter .item .r{
  font-size: 42rpx;
  font-weight: 700;
  color: red;
  margin: 40rpx 0 70rpx;
}
.banlanceCenter .btn{
  border: none;
  background: red;
  width: 210rpx;
  height: 60rpx;
  border-radius: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
}
.banlanceCenter .border{
  border-right: 2rpx solid #c6c6c6;
}

.rw{
  color: #ea3f32;
  font-size: 24rpx;
  padding: 40rpx;
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  padding-top: 0rpx;
}