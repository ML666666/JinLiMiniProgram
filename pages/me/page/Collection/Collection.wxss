/* pages/me/page/Collection/Collection.wxss */
.Collection{display: flex;flex-direction: column;}
.Collection .bar{height: 96rpx;position: fixed;width: 100%;display: flex;align-items: center;z-index: 100;background: #fff;justify-content: space-between;box-sizing: border-box;padding-right: 30rpx;}
.Collection .bar .btn{display: inline-block;height: 66rpx;width: 184rpx;line-height:65rpx;font-size: 26rpx;text-align: center;border-radius: 50rpx;
border: none;background: #f2f2f2;color: #666;margin-left: 30rpx;position: relative;}
.Collection .bar .t::after{
    content: "";
    position: absolute;
    top: 55%;
    transform: translateY(-50%);
    right: 20rpx;
    width: 0;
    height: 0;
    border: 7rpx solid transparent;
    border-top-color: #666;
}
.Collection .bar .showTab{background: #ffe5e5;color: #ff3a3a;}
.Collection .bar .showTab::after{
    content: "";
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
    right: 20rpx;
    width: 0;
    height: 0;
    border: 7rpx solid transparent;
    border-bottom-color: #ff3a3a;
}
.Collection .bar .list{position: absolute;width: 100%;display: flex;flex-wrap: wrap;top:96rpx;padding:20rpx;box-sizing: border-box;z-index: 10;background: #fff;left: 0rpx;}
.Collection .bar .list .item{width: 20%;padding: 20rpx 0;text-align: center;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;color: #666;font-size: 24rpx;}
.Collection .mask{position: fixed;top: 0rpx;left: 0rpx;right: 0rpx;bottom: 0rpx;background: rgba(0,0,0,.5);}
.Collection .collectionList{padding: 16rpx;}
.Collection .collectionList .item{display: flex;justify-content: space-between; padding: 24rpx;align-items: center;}
.Collection .collectionList .item .image{width: 180rpx;height: 180rpx;margin-right: 20rpx;}
.Collection .collectionList .item .c{width: 462rpx;display: flex;flex-direction: column;justify-content: space-between;}
.Collection .collectionList .item .close{
  width:28rpx;
  height: 28rpx;
  margin: 20rpx;
}
.Collection .collectionList .item .c{
  height: 180rpx;
}
.Collection .collectionList .item .c .t{line-height:36rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    height: auto;
    white-space: normal;
    word-wrap: normal;
    color: #2c3e50;
    font-size: 24rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;}
.Collection .collectionList .item .c .w{display: flex;align-items: baseline;}
.Collection .collectionList .item .c .w .p{font-size:30rpx;color: red;font-weight: 700;margin-right: 16rpx;}
.Collection .collectionList .item .c .w .d{color: #2c3e50;font-size: 24rpx;position: relative;}
.Collection .collectionList .item .c .w .d view{position: absolute;width: 110%;background: #2c3e50;height: 1rpx;top: 50%;transform: translateY(-50%)}
.Collection .delelte{
  width:28rpx;
  height: 28rpx
}