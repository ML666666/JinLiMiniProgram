swiper {
 padding-top: 30px;
}
.le-img {
 width: 100%;
 display: block;
 transform: scale(0.8);
 transition: all 0.3s ease;
 border-radius: 6px;
}
.le-img.le-active {
 transform: scale(1);
}
.shareText{
  font-size: 28rpx;
  text-align: center;
  margin: 24rpx 0rpx;
  text-decoration: underline;
  color: rgb(44, 62, 80);
}
.shareGround{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}
.shareGround button{background: transparent !important; border: none !important;padding: 0rpx;}
.shareGround .item{flex: 1;display: flex;flex-direction: column;justify-content: center;align-items: center;background: transparent;border:none;}
.shareGround .item image{width: 60rpx;height: 60rpx;margin-bottom: 8rpx;}
.shareGround .item text{font-size: 24rpx;color: rgb(44, 62, 80);}
