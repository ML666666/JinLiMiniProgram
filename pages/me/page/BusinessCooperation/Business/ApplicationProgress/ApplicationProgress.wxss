.wrapper{
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.wrapper .item{
  width: 700rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.wrapper .item .detial{
  box-sizing: border-box;
  padding-top: 0rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 53rpx;
}
.wrapper .item .detial .p{
  margin-top: 26rpx;
  display: flex;
  align-items: flex-start;
}
.wrapper .item .detial .p .title{
  width:135rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  text-align: left;
}
.wrapper .item .detial .p .content{
  width: 500rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.wrapper .item .top{
  position: relative;
  width: 700rpx;
  height: 100rpx;
}
.wrapper .item image{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 700rpx;
  height: 100rpx;
}
.wrapper .tips{
  position: absolute;
  font-size:32rpx;
  font-family:PingFang-SC-Bold,PingFang-SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.wrapper .detial{
  position: relative;
}
.wrapper .detial .btn{
  width:180rpx;
  height:64rpx;
  background:rgba(255,255,255,1);
  border-radius:50rpx;
  border:1rpx solid rgba(237,69,60,1);
  font-size:28rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(237,69,60,1);
  text-align: center;
  line-height: 64rpx;  
  position: absolute;
  bottom: 36rpx;
  right: 20rpx;
}