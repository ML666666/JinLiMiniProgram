/* pages/index/component/good_item/good_item.wxss */
.product_good_item{display: flex;flex-direction: column;}
.product_good_item image{width: 100%;height: 350rpx;}
.product_good_item .content{padding: 30rpx;display: flex;flex-direction: column;align-items: flex-start}
.product_good_item .item_title{height: 80rpx; font-size: 26rpx;line-height: 40rpx;}
.product_good_item .detail{width:100%; display: flex;justify-content: space-between;align-items: center;margin-top: 20rpx;}
.product_good_item .detail .btn{width: 200rpx;padding: 14rpx 0rpx;text-align: center;border-radius: 50rpx;font-size: 26rpx; background: linear-gradient(90deg,#f02b22,#ff1849);color: #fff;}
.product_good_item .detail .price_info{display: flex;flex-direction: column;align-items: space-between;}
.product_good_item .detail .price_info .price_info_top{display: flex;justify-content: flex-start;align-items: center;}
.product_good_item .detail .price_info .price_info_top .num{}
.product_good_item .detail .price_info .price{font-size: 30rpx;margin-right: 20rpx;font-weight: 700;color: #ff273b;}
.product_good_item .detail .price_info .price_1{font-size: 25rpx;margin-right: 40rpx;color: #888;position: relative;}
.product_good_item .detail .price_info .price_1 .del{position: absolute;top: 50%;left: 50%;transform: translate(-50%,-50%);background: #888;width: 100%;height: 1rpx;}
.product_good_item .detail .price_info .count{border-radius: 10rpx;border: 2rpx solid #f02b23;font-size: 24rpx;color:#f02b23;padding: 0 10rpx ;}
.product_good_item .detail .price_info .num{font-size: 24rpx;color: #888}