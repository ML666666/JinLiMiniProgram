.OederMask{
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  transform: translateY(100%);
  transition: 0.4s;
  transition-timing-function:ease-in-out;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.OederMask .contant .Mask{
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  top: 0rpx;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #3683d6;
  font-size: 32rpx;
}
.activeMaks{
  transform: translateY(0%);
}
.OederMask .vMask{position: absolute;height: 100%;width: 100%;top: 0px;left: 0px;right: 0px;z-index: 100;}
.OederMask .contant{
  background: #fff;
  z-index: 200;
  border-radius:30rpx 30rpx 0px 0px;
  position: relative;
  padding: 34rpx 0rpx 35rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.OederMask .contant .title{
  width: 100%;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  text-align: center;
  margin-bottom: 20rpx;
}
.OederMask .imageList{
  padding: 0rpx;
  display: flex;
  justify-content: flex-start;
  padding: 15rpx;
  box-sizing: border-box;
}
.OederMask .imageWrapper{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  margin: 10rpx;
  position: relative;
}
.OederMask .imageWrapper .image{
  margin: 0rpx;
  width: 220rpx;
  height: 220rpx;
}
.OederMask .tips{
  width: 100%;
  display: flex;
  padding: 30rpx 35rpx;
  box-sizing: border-box;
  text-align: left;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.OederMask .btn{
  width:700rpx;
  height:88rpx;
  background:linear-gradient(90deg,rgba(229,41,32,1) 0%,rgba(237,69,60,1) 100%);
  border-radius:43rpx;
  text-align: center;
  line-height: 88rpx;
  margin-bottom: 35rpx;
  color: #FFF;
  margin-top: 25rpx;
}
.OederMask .close{
  position: absolute;
  top: 44rpx;
  right: 34rpx;
  width: 24rpx;
  height: 24rpx;
}
.OederMask .radius{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 10rpx;
  right: 0rpx;
}