.wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.wrapper image{
  width: 174rpx;
  height: 170rpx;
}
.wrapper .t{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  margin-top: 19rpx;
  margin-bottom: 18rpx;
}
.wrapper .p{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
  margin-bottom: 28rpx;
}
.buttom{
  display: flex;justify-content: space-between;
  align-items: center;
}
.buttom{
  margin-bottom: 65rpx;
}
.buttom view{
  text-align: center;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height: 56rpx;
}
.btn_1{
  width:180rpx;
  height:56rpx;
  background:linear-gradient(90deg,rgba(237,69,60,1) 0%,rgba(229,41,32,1) 100%);
  border-radius:28rpx;
  color: #fff;
}
.btn{
  color: #FF3333;
  width:180rpx; 
  height:56rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(255,51,51,1);
  border-radius:28rpx;
}
.status{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width:630rpx;
  height:426rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.status .title{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 63rpx;
}
.status .title .line{
  width:6rpx;
  height:26rpx;
  background:linear-gradient(0deg,rgba(229,41,32,1) 0%,rgba(237,69,60,1) 100%);
  border-radius:3rpx;
  margin-right: 15rpx;
}
.border{
  display: flex;
  justify-content: space-between;
  margin-bottom: 38rpx;
  align-items: center;
}
.border .wx{
  width: 355rpx;
  height: 56rpx;
}
.border .check{
  width: 36rpx;
  height: 36rpx;
}
.btnWrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.btnWrapper .btn_1{
  width:270rpx;
  height:86rpx;
  background:rgba(238,238,238,1);
  border-radius:43rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height: 86rpx;
  text-align: center;
}
.btnWrapper .b1{
  background:rgba(238,238,238,1);
  color: #666666;
}

.btnWrapper .b2{
  background:linear-gradient(90deg,rgba(237,69,60,1) 0%,rgba(229,41,32,1) 100%);
  color:rgba(255,255,255,1);
}