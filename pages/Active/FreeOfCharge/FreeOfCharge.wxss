.FreeOfChange{
  padding-bottom: 160rpx;
  position: relative;
  background: #f5f5f5;
}
.FreeOfChange .rule{
  position: absolute;
  top: 230rpx;
  right: -20rpx;
  color: #000;
  background: hsla(0,0%,100%,.8);
  z-index: 20;
  font-size: 24rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
}
.FreeOfChange swiper{width: 100%;height: 424rpx;} 
.FreeOfChange swiper image{width: 100%;height: 100%;}
















.productsList{margin-left: 16rpx;
 width:100%;
 overflow:hidden;
 margin-top: -80rpx;
 padding-bottom: 20rpx;
 white-space:nowrap;}
.goodItem{
  overflow: hidden;
  display: inline-block;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 3rpx 4rpx 6rpx #ddd;
  margin-right: 20rpx;
}
.goodItem .wrapper{display: flex;}
.goodItem image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.goodItem .t_1{
    width: 414rpx;
    font-size: 30rpx;
    font-weight: 700;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #2c3e50;
}
.goodItem .t_2{
    margin-left: 10rpx;
    width: 414rpx;
    color: #888;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    height: auto;
    white-space: normal;
    word-wrap: normal;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    font-size: 24rpx;
    height:100rpx;
}
.goodItem .t_3{display: flex;color: #f92d4c;font-size: 26rpx;font-weight: 700;margin-top: 20rpx;}
.goodItem .t_4{margin-right: 15rpx;}