.productsList{margin-left: 16rpx;
 width:100%;
 overflow:hidden;
 margin-top: -80rpx;
 padding-bottom: 20rpx;
 white-space:nowrap;}
.goodItem{
  overflow: hidden;
  display: inline-block;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 3rpx 4rpx 6rpx #ddd;
  margin-right: 20rpx;
  position: relative;
}
.goodItem .p{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 120rpx;
  height: 40rpx;
  z-index: 20;
}
.goodItem .wrapper{display: flex;}
.goodItem image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.goodItem .t_1{
    width: 414rpx;
    font-size: 30rpx;
    font-weight: 700;
    margin-bottom: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #2c3e50;
}
.goodItem .t_2{
    margin-left: 10rpx;
    width: 414rpx;
    color: #888;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    height: auto;
    white-space: normal;
    word-wrap: normal;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    font-size: 24rpx;
    height:100rpx;
}
.goodItem .t_3{display: flex;color: #f92d4c;font-size: 26rpx;font-weight: 700;margin-top: 20rpx;}
.goodItem .t_4{margin-right: 15rpx;}