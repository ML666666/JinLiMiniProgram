.userInfo{
  padding: 20rpx 60rpx 40rpx 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  box-sizing:border-box;
}
.userInfo image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userInfo .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userInfo .detailWrapper{
  display: flex;
}
.detailWrapper .item_W{
  position: relative;
  padding: 20rpx 40rpx 10rpx;
  box-sizing: border-box;
}
.detailWrapper .item_W .p{
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  color: #2c3e50;
}
.detailWrapper .item_W .r{
  font-size: 24rpx;
  color: #888;
  text-align: center;
}
.tabs{
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid rgb(136, 136, 136,0.2);
}
.tabs .tab{
  flex: 1;
  line-height: 100rpx;
  font-weight: 700;
  font-size: 30rpx;
  box-sizing: border-box;
  color: #888;
}
.tabs .tab:first-child{
  text-align: right;
  padding-right: 40rpx;
}
.tabs .tab:last-child{
  text-align: left;
  padding-left: 40rpx;
}
.tabs .active{
  color: #000;
}
.listWrapper{
  padding-bottom: 100rpx;
}