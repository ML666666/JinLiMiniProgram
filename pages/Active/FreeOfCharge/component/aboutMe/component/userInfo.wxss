.userInfo{
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom:20rpx solid #f5f5f5; 
  background: #fff;
  box-sizing:border-box;
}

.userInfo .item_W image{
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}

.userInfo .header{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userInfo .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}
.userInfo .detailWrapper{
  display: flex;
}
.detailWrapper .item_W{
  position: relative;
  padding: 20rpx 40rpx 10rpx;
  box-sizing: border-box;
  position: relative;
}
.detailWrapper .item_W .p{
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  color: #2c3e50;
}
.detailWrapper .item_W .r{
  font-size: 24rpx;
  color: #888;
  text-align: center;
}
.numDetail{
  display: flex;
  justify-content: space-between;
  width: 100%;
  align-items: center;
}
.numDetail .d{
  font-weight: 700;
  font-size: 30rpx;
  color: #2c3e50;
}
.numDetail .d .i{
  color: #888;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.numDetail .s{
  border: 2rpx solid #222;
  border-radius: 60rpx;
  padding: 10rpx 20rpx;
  color: #2c3e50;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  line-height: 1.4;
}
.numDetail button{
  margin: 0rpx;
}
.numDetail .share{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.MyGoldCoinRecord{
  display: flex;
  justify-content: space-between;
}
