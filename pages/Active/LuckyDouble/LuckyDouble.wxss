/* pages/Active/LuckyDouble/LuckyDouble.wxss */
.sp{
  background: #f5f5f5;
  position: relative;
}
.sp .banner{
  height: 301rpx;
  width: 100%;
}
.sp .title{
  font-size: 32rpx;
  padding-left: 30rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-weight: 700;
  color: #2c3e50;
}
.sp .rule{
  position: absolute;
  top: 230rpx;
  right: -20rpx;
  color: #000;
  background: hsla(0,0%,100%,.8);
  z-index: 20;
  font-size: 24rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
}

.sp .textSwiper{position: absolute;top: 210rpx;left: 10rpx;width: 340rpx;padding-left: 20rpx;padding-right: 20rpx; background: hsla(0,0%,100%,.7);z-index: 10;box-sizing: border-box;height: 60rpx;border-radius: 30rpx;z-index: 50;}
.sp .textSwiper swiper{
  height: 60rpx !important;
}
.sp .textSwiper swiper-item{
  width: 100%;
  height: 60rpx !important;
  line-height: 60rpx !important;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000;
  display: flex;
  align-items: center;
}
.sp .textSwiper swiper-item image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.sp .textSwiper swiper-item text{
  line-height: 20rpx;
  font-size: 20rpx;
  padding: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.productsList{margin-left: 30rpx;width:100%;overflow:hidden;padding-bottom: 20rpx;white-space:nowrap;margin-right: 30rpx;padding-right: 100rpx;}
.goodItem{overflow: hidden;display: inline-block;box-sizing: border-box;position: relative;background: #fff;width:216.666rpx;margin-right: 20rpx}
.goodItem .wrapper{display: flex;flex-direction: column;justify-content: center;align-items: center;}
.goodItem image{width:216.666rpx;height:216.666rpx;margin-bottom: 10rpx;}
.goodItem .t_1{
  /* width: 2rem; */
  font-size: 26rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  height: auto;
  white-space: normal;
  word-wrap: normal;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goodItem .t_2{
  color: #f22c2d;
  font-size: 30rpx;
  font-weight: 700;
  /* margin: 10rpx 0 4rpx; */
  width: 100%;
  text-align: left;
}
.goodItem .t_3{font-size: 24rpx; color: #888;text-align: left;width: 100%;}
.t_Wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}