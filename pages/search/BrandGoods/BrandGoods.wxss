.top{width:100%;height: 100rpx;display: flex;justify-content: space-between;align-items: center;box-sizing: border-box;padding-left: 28rpx;z-index: 200;background: #fff;}
.top .cancel{color: #333;font-size: 26rpx;padding: 26rpx 24rpx;}
.top .searchBar{width: 608rpx;height: 64rpx;background: #f0f0f0;border-radius: 40rpx;display: flex;justify-content: flex-start;align-items: center;box-sizing: border-box;}
.top .searchBar image{width: 32rpx;height: 32rpx; margin: 0rpx 20rpx;}
.top .searchBar input{width: 472rpx;height: 64rpx;font-size: 24rpx;}
.btnWrapper{display: flex;font-size: 26rpx;background: #fff;}
.btnWrapper .btn{flex: 1; line-height: 80rpx;height: 80rpx;text-align: center;}
.listWrapper{display: flex;flex-wrap: wrap;padding: 20rpx 16rpx;box-sizing: border-box;justify-content: space-between;}
.listWrapper .item{width: 352rpx;border-radius: 12rpx;background: #fff;overflow: hidden;margin-bottom: 20rpx;}
.listWrapper .item image{width: 352rpx;height: 352rpx;}
.listWrapper .describe{padding: 10rpx 20rpx 20rpx;font-size: 28rpx;box-sizing: border-box;}
.listWrapper .item .title{width: 100%;height: 70rpx;margin-bottom: 20rpx;display: -webkit-box;text-overflow: ellipsis;overflow: hidden;white-space: normal;word-wrap: normal;-webkit-line-clamp: 2;font-size: 24rpx;color: #2c3e50;}
.sales-price{display: flex;justify-content: space-between;}
.sales-price .price{
  font-size: 24rpx;
  color: #ff0101;
  font-weight: 700;
}
.sales-price .sales{
  font-size: 24rpx;
  color: #888;
}
.active{
      color: red;
}
.arrowWrapper{
  position: relative;
}
.arrowWrapper_2{
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  top: 50%;
  right: 66rpx;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
}
.arrowWrapper_2 image{
  width: 20rpx;
  height: 10rpx;
}
.arrowWrapper_2 .one{
  transform: rotate(180deg);
  margin-bottom: 5rpx;
}
