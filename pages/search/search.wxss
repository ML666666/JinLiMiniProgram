/* pages/search/search.wxss */
.searchWrapper{display: flex;flex-direction: column;}
.searchWrapper .SearchContainer{width: 100%;display: flex;justify-content: space-between;box-sizing: border-box;}
.searchWrapper .DetailWrapper{width: 520rpx;display: flex;flex-direction: column;margin-right: 26rpx;padding-left: 20rpx;border-left: 2rpx solid rgba(143, 136, 136, 0.2);padding-top: 20rpx;min-height: 1200rpx;}
.searchWrapper .DetailWrapper .ad{width: 100%;margin-bottom: 40rpx;}
.searchWrapper .DetailWrapper .tips{display: flex;justify-content: space-between;margin-bottom: 24rpx;}
.searchWrapper .DetailWrapper .tips image{width: 12rpx;}
.searchWrapper .DetailWrapper .tips_1{color: #2c3e50;font-size: 24rpx;}
.searchWrapper .DetailWrapper .tips_2{color: #ff1d26;font-size: 24rpx; display: flex;justify-content: space-between;align-items: center;width: 66.6rpx;}
.searchWrapper .DetailWrapper  .itemList .item{padding: 30rpx 0rpx;display: flex;justify-content: space-between;}
.searchWrapper .DetailWrapper  .itemList .item image{width: 130rpx;height: 130rpx;margin-right: 20rpx;}
.searchWrapper .DetailWrapper  .itemList .item .about .title{color: #888;font-size: 24rpx;height: 80rpx;line-height: 40rpx;width: 366rpx;margin-bottom: 20rpx;}
.searchWrapper .DetailWrapper .itemList .item .detail{display: flex;justify-content: space-between;align-items: center;}
.searchWrapper .DetailWrapper .itemList .item .detail .price{color: #fe0b1c;font-size: 30rpx;font-weight: 700}
.searchWrapper .DetailWrapper .itemList .item .detail .sell{color: #888;font-size: 24rpx;font-weight: 700}

.item_sub_List{
  display: flex;
  flex-wrap: wrap;
}
.item_sub_List .item{
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3%;
  height: 224rpx;
}
.item_sub_List .item image{
  width: 100rpx;
  height: 100rpx;
}
.item_sub_List .item text{
  text-align: center;
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #888;
}